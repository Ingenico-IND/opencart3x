{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary">
          <i class="fa fa-save"></i>
        </button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li>
            <a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning is iterable and error_warning|length >  0 %}
      {% for error in error_warning %}      
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error}}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
      {% endfor %}{% endif %}
      <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_for_ingenico}}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
        </div>
        <div class="panel-body">
          <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-payment" class="form-horizontal">
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-desciption">Description</label>
              <div class="col-sm-10">
               Ingenico ePayments (a Worldline brand) is India's leading digital payment solutions company. 
                    Being a company with more than 45 years of global payment experience, we are present in India
                     for over 20 years and are powering over 550,000 businesses with our tailored payment solution.
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-merchant">{{ merchant_code }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_ingenico_merchant_code" value="{{ payment_ingenico_merchant_code }}" placeholder="{{ merchant_code }}" id="input-merchant-code" class="form-control" />
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-merchant_scheme_code">{{ merchant_scheme_code }}</label>
              <div class="col-sm-10">
                <input type="text" name="payment_ingenico_merchant_scheme_code" value="{{ payment_ingenico_merchant_scheme_code }}" placeholder="{{ merchant_scheme_code }}" id="input-merchant_scheme_code" class="form-control" />
              </div>
            </div>
            
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-key">SALT</label>
              <div class="col-sm-10">
                <input type="text" name="payment_ingenico_key" value="{{ payment_ingenico_key }}" placeholder="{{ key }}" id="input-key" class="form-control" />
              </div>
            </div>
            
            <div class="form-group required" id="webservice_locator" >
              <label class="col-sm-2 control-label" for="input-mode">Type of Payment</label>
              <div class="col-sm-10">
                <select name="payment_ingenico_webservice_locator" id="input-mode" class="form-control">
                  {% if payment_ingenico_webservice_locator == 'Test' %}
                    <option value="Test" selected="selected">{{ 'TEST' }}</option>
                  {% else %}
                    <option value="Test">{{ 'TEST' }}</option>
                  {% endif %}
                  {% if payment_ingenico_webservice_locator == 'Live' %}
                    <option value="Live" selected="selected">{{ 'LIVE' }}</option>
                  {% else %}
                    <option value="Live">{{ 'LIVE' }}</option>
                  {% endif %}
                </select>
                <br><p>For TEST mode amount will be charge 1</p>
              </div>
            </div>
            
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-status">{{ status }}</label>
              <div class="col-sm-10">
                <select name="payment_ingenico_status" id="input-status" class="form-control">
                  {% if payment_ingenico_status == "1" %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %} 
                </select>
              </div>
            </div>
            <div class="form-group required">
              <label class="col-sm-2 control-label" for="input-sort_order">{{ sort_order }}</label>
              <div class="col-sm-10">
                  {% if payment_ingenico_sort_order != "" %}

                <input type="text" name="payment_ingenico_sort_order" value="{{ payment_ingenico_sort_order }}" placeholder="{{ sort_order }}" id="input-sort_order" class="form-control" />
                {% else %}
                  <input type="text" name="payment_ingenico_sort_order" value="1" placeholder="{{ sort_order }}" id="input-sort_order" class="form-control" />
                  {% endif %}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_primary_color_code">Primary Color</label>
              <div class="col-sm-10">
                {% if payment_ingenico_primary_color_code != "" %}
                <input type="text" name="payment_ingenico_primary_color_code" value="{{ payment_ingenico_primary_color_code }}" placeholder="" id="input-payment_primary_color_code" class="form-control" />
                {% else %}
                  <input type="text" name="payment_ingenico_primary_color_code" value="#3977b7" placeholder="" id="input-payment_primary_color_code" class="form-control" />
                  {% endif %}
                <br><p>Color value can be hex, rgb or actual color name</p>

              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_secondary_color_code">Secondary Color</label>
              <div class="col-sm-10">
                {% if payment_ingenico_secondary_color_code != "" %}
                <input type="text" name="payment_ingenico_secondary_color_code" value="{{ payment_ingenico_secondary_color_code }}" placeholder="" id="input-payment_ingenico_secondary_color_code" class="form-control" />
                {% else %}
                  <input type="text" name="payment_ingenico_secondary_color_code" value="#FFFFFF" placeholder="" id="input-payment_ingenico_secondary_color_code" class="form-control" />
                   {% endif %}
                   <br><p>Color value can be hex, rgb or actual color name</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_button_color_code_1">Button Color 1</label>
              <div class="col-sm-10">
                {% if payment_ingenico_button_color_code_1 != "" %}
                <input type="text" name="payment_ingenico_button_color_code_1" value="{{ payment_ingenico_button_color_code_1 }}" placeholder="" id="input-payment_ingenico_button_color_code_1" class="form-control" />
                {% else %}
                  <input type="text" name="payment_ingenico_button_color_code_1" value="#1969bb" placeholder="" id="input-payment_ingenico_button_color_code_1" class="form-control" />
                  {% endif %}
                  <br><p>Color value can be hex, rgb or actual color name</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_button_color_code_2">Button Color 2</label>
              <div class="col-sm-10">
                  {% if payment_ingenico_button_color_code_2 != "" %}
                <input type="text" name="payment_ingenico_button_color_code_2" value="{{ payment_ingenico_button_color_code_2 }}" placeholder="" id="input-payment_ingenico_button_color_code_2" class="form-control" />
                {% else %}
                  <input type="text" name="payment_ingenico_button_color_code_2" value="#FFFFFF" placeholder="" id="input-payment_ingenico_button_color_code_2" class="form-control" />
                  {% endif %}
                  <br><p>Color value can be hex, rgb or actual color name</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_merchant_logo_url">Logo URL</label>
              <div class="col-sm-10">
                  {% if payment_ingenico_merchant_logo_url != "" %}
                <input type="text" name="payment_ingenico_merchant_logo_url" value="{{ payment_ingenico_merchant_logo_url }}" placeholder="" id="input-payment_ingenico_merchant_logo_url" class="form-control" />
                {% else %}
                <input type="text" name="payment_ingenico_merchant_logo_url" value="https://www.paynimo.com/CompanyDocs/company-logo-md.png" placeholder="" id="input-payment_ingenico_merchant_logo_url" class="form-control" />
                {% endif %}
                <br><p>An absolute URL pointing to a logo image of merchant which will show on checkout popup</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_enableExpressPay">Enable ExpressPay</label>
              <div class="col-sm-10">
                <select name="payment_ingenico_enableExpressPay" id="input-status" class="form-control">
                  {% if payment_ingenico_enableExpressPay != "" %}
                  {% if payment_ingenico_enableExpressPay == "1" %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option> 
                  {% endif %} 
                </select>
                <br><p>To enable saved payments set its value to yes</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_separateCardMode">Separate Card Mode</label>
              <div class="col-sm-10">
                <select name="payment_ingenico_separateCardMode" id="input-status" class="form-control">
                  {% if payment_ingenico_separateCardMode != "" %}
                  {% if payment_ingenico_separateCardMode == "1" %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option> 
                  {% endif %}
                </select>
                <br><p>If this feature is enabled checkout shows two separate payment mode(Credit Card and Debit Card)</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_enableNewWindowFlow">Enable New Window Flow</label>
              <div class="col-sm-10">
                <select name="payment_ingenico_enableNewWindowFlow" id="input-status" class="form-control">
                  {% if payment_ingenico_enableNewWindowFlow != "" %}
                  {% if payment_ingenico_enableNewWindowFlow == "1" %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                  {% else %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option> 
                  {% endif %} 
                </select>
                <br><p>If this feature is enabled, then bank page will open in new window</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_merchantMsg">Merchant Message</label>
              <div class="col-sm-10">
                <input type="text" name="payment_ingenico_merchantMsg" value="{{ payment_ingenico_merchantMsg }}" placeholder="" id="input-payment_ingenico_merchantMsg" class="form-control" />
                <br><p>Customize message from merchant which will be shown to customer in checkout page</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_disclaimerMsg">Disclaimer Message</label>
              <div class="col-sm-10">
                <input type="text" name="payment_ingenico_disclaimerMsg" value="{{ payment_ingenico_disclaimerMsg }}" placeholder="" id="input-payment_ingenico_disclaimerMsg" class="form-control" />
                <br><p>Customize disclaimer message from merchant which will be shown to customer in checkout page</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_paymentMode">Payment Mode</label>
              <div class="col-sm-10">
                <select name="payment_ingenico_paymentMode" id="input-status" class="form-control">
                  {% if payment_ingenico_paymentMode != "" %}
                  <option value="{{ payment_ingenico_paymentMode }}" selected="selected">{{ payment_ingenico_paymentMode }}</option> 
                  <option value="all">all</option> 
                  <option value="cards">cards</option>
                  <option value="netBanking">netBanking</option>
                  <option value="UPI">UPI</option>
                  <option value="imps">imps</option>
                  <option value="wallets">wallets</option>
                  <option value="cashCards">cashCards</option>
                  <option value="NEFTRTGS">NEFTRTGS</option>
                  <option value="emiBanks">emiBanks</option>
                  {% else %}
                  <option value="all" selected="selected">all</option> 
                  <option value="cards">cards</option>
                  <option value="netBanking">netBanking</option>
                  <option value="UPI">UPI</option>
                  <option value="imps">imps</option>
                  <option value="wallets">wallets</option>
                  <option value="cashCards">cashCards</option>
                  <option value="NEFTRTGS">NEFTRTGS</option>
                  <option value="emiBanks">emiBanks</option>
                  {% endif %} 
                </select>
                <br><p>If Bank selection is at Ingenico ePayments India Pvt. Ltd. 
                        (a Worldline brand) end then select all, if bank selection at Merchant end then pass 
                        appropriate mode respective to selected option</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_paymentModeOrder">Payment Mode Order</label>
              <div class="col-sm-10">
                  {% if payment_ingenico_paymentModeOrder != "" %}

                <textarea type="text" name="payment_ingenico_paymentModeOrder" value="{{ payment_ingenico_paymentModeOrder }}" placeholder="" id="input-payment_ingenico_paymentModeOrder" class="form-control">{{ payment_ingenico_paymentModeOrder }}</textarea>
                {% else %}
                  <textarea type="text" name="payment_ingenico_paymentModeOrder" value="{{ payment_ingenico_paymentModeOrder }}" placeholder="" id="input-payment_ingenico_paymentModeOrder" class="form-control">wallets,cards,netBanking,imps,cashCards,UPI,MVISA,debitPin,NEFTRTGS,emiBanks</textarea>
                  {% endif %}
                  <br><p>Please pass order in this format: cards,netBanking,imps,wallets,cashCards,UPI,MVISA,debitPin,NEFTRTGS,emiBanks. 
                  Merchant can define their payment mode order</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_enableInstrumentDeRegistration">Enable InstrumentDeRegistration</label>
              <div class="col-sm-10">
                <select name="payment_ingenico_enableInstrumentDeRegistration" id="input-status" class="form-control">
                  {% if payment_ingenico_enableInstrumentDeRegistration != "" %}
                  {% if payment_ingenico_enableInstrumentDeRegistration == "1" %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option> 
                  {% endif %} 
                </select>
                <br><p>If this feature is enabled, you will have an option to delete saved cards</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_txnType">Transaction Type</label>
              <div class="col-sm-10">
                <select name="payment_ingenico_txnType" id="input-status" class="form-control">
                  <option value="SALE" selected="selected">SALE</option>
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_hideSavedInstruments">Hide SavedInstruments</label>
              <div class="col-sm-10">
                <select name="payment_ingenico_hideSavedInstruments" id="input-status" class="form-control">
                  {% if payment_ingenico_hideSavedInstruments != "" %}
                  {% if payment_ingenico_hideSavedInstruments == "1" %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option> 
                  {% endif %} 
                </select>
                <br><p>If enabled checkout hides saved payment options even in case of enableExpressPay is enabled.</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_saveInstrument">Save Instrument</label>
              <div class="col-sm-10">
                <select name="payment_ingenico_saveInstrument" id="input-status" class="form-control">
                  {% if payment_ingenico_saveInstrument != "" %}
                  {% if payment_ingenico_saveInstrument == "1" %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option> 
                  {% endif %}  
                </select>
                <br><p>Enable this feature to vault instrument</p>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_displayErrorMessageOnPopup">Display Transaction Message on Popup</label>
              <div class="col-sm-10">
                <select name="payment_ingenico_displayErrorMessageOnPopup" id="input-status" class="form-control">
                  {% if payment_ingenico_displayErrorMessageOnPopup != "" %}
                  {% if payment_ingenico_displayErrorMessageOnPopup == "1" %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %}
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option> 
                  {% endif %} 
                </select>
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-payment_ingenico_embedPaymentGatewayOnPage">Embed Payment Gateway On Page</label>
              <div class="col-sm-10">
                <select name="payment_ingenico_embedPaymentGatewayOnPage" id="input-status" class="form-control">
                  {% if payment_ingenico_embedPaymentGatewayOnPage != "" %}
                  {% if payment_ingenico_embedPaymentGatewayOnPage == "1" %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                  {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                  {% endif %} 
                  {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option> 
                  {% endif %}
                </select>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>  
{{ footer }}